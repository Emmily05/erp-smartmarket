<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/smartmarket.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Arquivos de log rolam diariamente -->
            <fileNamePattern>logs/smartmarket.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Manter no máximo 30 dias de logs -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>

    <!-- Configuração específica para pacotes do projeto -->
    <logger name="com.smartmarket" level="debug" additivity="false">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </logger>

    <!-- Reduzir o nível de log para bibliotecas externas -->
    <logger name="org.apache.catalina" level="warn"/>
    <logger name="org.jboss.weld" level="warn"/>
    <logger name="jakarta.enterprise.inject" level="warn"/>

</configuration>
